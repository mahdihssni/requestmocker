{
  "manifest_version": 3,
  "name": "Request Mocker",
  "version": "1.0.0",
  "description": "Mock routes in the browser by intercepting fetch/XHR and returning custom responses.",
  "action": {
    "default_title": "Request Mocker",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

